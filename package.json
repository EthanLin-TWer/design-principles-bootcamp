{
  "name": "calendar-app",
  "version": "1.0.0",
  "description": "First exercise of Jiker's Code Design Principles bootcamp.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --verbose",
    "run": "open src/3-calories/calories.html"
  },
  "author": "Linesh",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-javascript-the-good-parts": "^1.7.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.(js|ts)"
    ],
    "transform": {
      ".js": "babel-jest",
      ".ts$": "ts-jest"
    },
    "verbose": false,
    "collectCoverage": false
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged || echo 'lint failed but git commit still proceeding...'",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "src/**/*.(js|ts)": [
      "npm run lint -- --fix",
      "git add"
    ]
  }
}
